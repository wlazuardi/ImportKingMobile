@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="mt-3 mx-3 text-center">
    @if (@ViewBag.Result == "success")
    {
        <div class="alert alert-success">
            Payment success
        </div>
        <div class="text-success mt-5">
            <i class="fa fa-check-circle" style="font-size:96px;"></i>
        </div>
        <div class="text-success mt-4">
            Payment for <span class="fw-bolder">@ViewBag.OrderNo</span> has been completed.
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Payment @ViewBag.Result
        </div>
        <div class="text-warning mt-5">
            <i class="fa fa-exclamation-circle" style="font-size:96px;"></i>
        </div>
        <div class="text-warning mt-4">
            Payment for <span class="fw-bolder">@ViewBag.OrderNo</span> has been cancelled.
        </div>
    }

    @if (@ViewBag.OrderId > 0)
    {
        <a class="btn btn-primary mt-5" href="/Order/@ViewBag.OrderId/Detail">
            Back to Order Page
        </a>
    }
</div>

