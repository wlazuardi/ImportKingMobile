@{ 
    ViewData["Title"] = "Sign Up"; 
}

<section class="py-3 px-4">

    <form id="registerForm">
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <div>
                <input class="form-control" placeholder="First Name" name="firstName" type="text">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <div>
                <input class="form-control" placeholder="Last Name" name="lastName" type="text">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <div>
                <input class="form-control" placeholder="Email" name="email" type="email">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <div>
                <input class="form-control" placeholder="Password" name="password" type="password">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <div>
                <input class="form-control" placeholder="Confirm Password" name="confirmPassword" type="password">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <div>
                <input class="form-control" placeholder="Phone Number" name="phoneNumber" type="text">
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
    </form>

</section>

<div class="preloader" id="preloader" style="display:none;">
    <div class="spinner-grow" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>

<p class="text-center mx-3" id="spinner" style="display:none;">
    <span class="spinner-grow spinner-grow-sm" role="status"></span>
    <span class="spinner-grow spinner-grow-sm" role="status"></span>
    <span class="spinner-grow spinner-grow-sm" role="status"></span>
</p>

<p class="text-center mx-3" id="result"></p>

<br>

@section Scripts
{
    <script src="~/js/app/page.register.js" type="text/javascript"></script>
} 